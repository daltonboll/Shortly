<div id="shortener" class="center">
  <h1>Hi, <%= current_user.name %>! Here you can shorten a link:</h1>
  <%= form_for(Link.new) do |f| %>
    <div id="title_box">
      <%= f.text_field :title, placeholder: "Give your link a title" %><br />
    </div>
    <div id="destination_box">
      <%= f.text_field :destination, placeholder: "Enter your link here!" %><br />
    </div>
    <div id="shorten_submit">
      <%= f.submit("Shorten!", id: "shorten_button") %>
    <div>
  <% end %>
</div>